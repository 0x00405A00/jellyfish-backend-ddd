@page "/"
@inject ILocalStorageService LocalStorageService
@inject NavigationManager NavigationManager
@inject ISessionStorage SessionStorage

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

@code
{
    private SessionDTO _session;
    private CancellationTokenSource cancellationToken = new();
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        var token = await LocalStorageService.GetDeserializedJsonItemFromKey<AuthDTO>(WebAppConst.BrowserLocalStorageItemKey.Authorization);
        if (token!=null && !token.IsTokenExpired)
        {
            _session = await SessionStorage.GetSession(cancellationToken.Token);
            var data = _session.General;
            NavigationManager.NavigateTo(data.LastRoute);
        }
    }
}
