@code
{

    private readonly MudTheme _currentTheme = new()
        {
            Palette = new PaletteLight
            {
                Primary = "#0A7BCF",
                Secondary = "#800EEB",
                Info = "#64a7e2",
                Success = "#2ECC40",
                Warning = "#FFC107",
                Error = "#FF0000",
                AppbarBackground = "#212121",
                TextPrimary = "#000000",
                TextSecondary = "#000000",
                White = "#FFFFFF",

            },
        };


    private bool ProfileButtonExpand = false;
    private bool IsLoggedIn = false;
    private CancellationTokenSource cancellationToken = new();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if(firstRender)
        {
        }
        var token = await AuthentificationService.GetCurrentAuthentification(cancellationToken.Token);

        IsLoggedIn = token!= null&&!token.IsTokenExpired;

    }
    public async Task ClickLogout()
    {
        await DialogHandler.ShowLogoutDialog(cancellationToken.Token);
    }
    public Task ProfileButtonClick()
    {
        ProfileButtonExpand = !ProfileButtonExpand;
        return Task.CompletedTask;
    }
}